<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<GridPane alignment="CENTER" hgap="25.0" vgap="25.0" xmlns="http://javafx.com/javafx/8.0.121"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.ekipogh.sud.controllers.LauncherController">
    <Label alignment="CENTER" text="The SUD 2" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <font>
            <Font name="Arial Bold" size="26.0"/>
        </font>
    </Label>
    <Label text="The Single User Dungeon game engine" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <HBox spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Label text="Choose a file"/>
        <TextField fx:id="filePath"/>
        <Button onAction="#chooseFile" text="..."/>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Button text="Editor" onAction="#startEditor"/>
        <Button text="Player" onAction="#startPlayer"/>
    </HBox>
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" percentWidth="0.0"/>
    </columnConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>
